<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff">

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:itemTextColor="@color/darkgray"
        app:itemIconTint="@color/darkgray"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer"
        android:layout_gravity="start"
        android:background="#ffffff"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation">

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="차량선택"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="33dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#ed3e7b"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="#b7b7b7"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:elevation="3dp"
                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                       >

                        <TextView
                            android:id="@+id/txtCar"
                            android:layout_weight="1"
                            android:text="차량을 선택해주세요"
                            android:textSize="16dp"
                            android:layout_marginLeft="9dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_directions_car_black_24dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="경로설정"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="33dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#ed3e7b"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="#b7b7b7"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:elevation="3dp"
                    >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="#ffffff">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:background="#ffffff"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/startText"
                                android:text="출발지 입력"
                                android:textSize="16dp"
                                android:layout_marginLeft="9dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#b7b7b7"/>

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:background="#ffffff"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="8dp">
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/endText"
                                android:text="도착지 입력"
                                android:textSize="16dp"
                                android:layout_marginLeft="9dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#b7b7b7"/>

                    <Button
                        android:layout_marginLeft="7dp"
                        android:id="@+id/changeBtn"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="@drawable/change"
                        />

                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="#b7b7b7"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:elevation="3dp"
                    >

                <LinearLayout
                    android:id="@+id/totalBox"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:focusable="false" >

                    <TextView

                        android:textColor="#3a3a3c"
                        android:textStyle="bold"
                        android:text="총거리 : "
                        android:textSize="16dp"
                        android:layout_marginLeft="9dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/distancetext"
                        android:textStyle="bold"
                        android:textColor="#3a3a3c"
                        android:text=""
                        android:textSize="16dp"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:gravity="right"

                        android:layout_marginRight="13dp"
                        android:textColor="#3a3a3c"
                        android:text="km"
                        android:textSize="18dp"

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="일정선택"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="33dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#ed3e7b"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="#b7b7b7"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:elevation="3dp"
                    >
                <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="#ffffff"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="vertical">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_weight="1"
                            android:text="출발 날짜를 선택해주세요"
                            android:textSize="16dp"
                            android:layout_marginLeft="9dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/day"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b7b7b7"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="#ffffff"  >

                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_marginLeft="9dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="출발 시간을 선택해주세요"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/time"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="#b7b7b7"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="30dp"
                    android:elevation="3dp"
                    >


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="#ffffff"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/txtDate2"
                            android:layout_marginLeft="9dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="도착 날짜를 선택해주세요"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"

                            android:src="@drawable/day"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#b7b7b7"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="#ffffff"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtTime2"
                            android:layout_marginLeft="9dp"
                            android:layout_gravity="center"
                            android:text="도착 시간을 선택해주세요"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/time"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                </LinearLayout>


                </LinearLayout>



            </LinearLayout>


    </ScrollView>






        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation"
            android:background="?android:attr/windowBackground"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>