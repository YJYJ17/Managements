<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BusinessCard.BCDetailActivity"
        android:orientation="vertical">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bcbackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    android:elevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bcbackground_outline"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="20dp"
                        android:background="#ffffff"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="4dp">
                            <ImageView
                                android:layout_width="320dp"
                                android:layout_height="95dp"
                                android:src="@drawable/rectangle"/>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="4dp">
                                <TextView
                                    android:id="@+id/bcname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:text="정희은"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp"/>
                                <TextView
                                    android:id="@+id/bclevel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13dp"
                                    android:text="핀턴"
                                    android:textColor="#58585a"
                                    android:layout_marginBottom="2dp"/>
                                <TextView
                                    android:id="@+id/bccom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="13dp"
                                    android:textColor="#88898c"
                                    android:text="부산은행"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <!-- 휴대폰 시작-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="@dimen/bcdetail_icon_size"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_phonenum"
                            android:layout_marginLeft="@dimen/bcdetail_icon_margin_left"
                            android:paddingRight="@dimen/bcdetail_icon_margin_right"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:id="@+id/bcphone"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="010 6787 9868"
                                        android:layout_height="wrap_content"
                                        android:textSize="17dp"
                                        android:paddingLeft="4dp"/>
                                    <TextView
                                        android:layout_marginTop="1dp"
                                        android:layout_marginLeft="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="휴대폰"
                                        android:textColor="@color/BCdetailcategory"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">
                                    <ImageView
                                        android:layout_width="@dimen/bcdetail_icon_size"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_phone"
                                        android:id="@+id/callbtn"/>
                                    <ImageView
                                        android:layout_marginLeft="3dp"
                                        android:layout_width="@dimen/bcdetail_icon_size"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_msg"
                                        android:id="@+id/msgbtn"/>
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_centerInParent="true"
                                android:background="#dfe0e0"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 휴대폰 끝-->

                    <!-- 이메일 시작-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="@dimen/bcdetail_icon_size"
                                android:src="@drawable/ic_mail"
                                android:layout_marginLeft="@dimen/bcdetail_icon_margin_left"
                                android:layout_marginRight="10dp"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginTop="5dp">
                                        <TextView
                                            android:id="@+id/bcemail"
                                            android:layout_width="200dp"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            android:textSize="17dp"
                                            android:text="by9078@naver.com"/>

                                        <!--디버그-->
                                        <TextView
                                            android:id="@+id/bcno"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="0dp" />
                                        <!--디버그 끝-->
                                        <TextView
                                            android:layout_marginTop="1dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="이메일"
                                            android:textColor="@color/BCdetailcategory"/>
                                    </LinearLayout>
                                    <ImageView
                                        android:layout_marginTop="6dp"
                                        android:layout_marginLeft="48dp"
                                        android:layout_width="45dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_sendmail"
                                        android:id="@+id/emailbtn"/>
                                </LinearLayout>

                                <View
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:background="#dfe0e0"/>
                            </LinearLayout>
                    </LinearLayout>
                        </LinearLayout>
                    <!--이메일 끝-->

                    <!--지도 시작-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/bcdetail_icon_size"
                                android:layout_height="65dp"
                                android:src="@drawable/ic_add"
                                android:layout_marginLeft="@dimen/bcdetail_icon_margin_left"
                                android:paddingRight="@dimen/bcdetail_icon_margin_right"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:id="@+id/bcadd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="서울 강남구 테헤란호329 (BNK 저축은행
서울 영업부)"
                                    android:textSize="15dp"
                                    android:paddingLeft="4dp"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginLeft="2dp"
                                    android:text="주소"
                                    android:textColor="@color/BCdetailcategory"/>
                            </LinearLayout>

                        </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <FrameLayout
                            android:id="@+id/mainFragment2"
                            android:layout_marginLeft="15dp"
                            android:layout_width="330dp"
                            android:layout_height="200dp"/>
                        <!--RATIO=3:1-->
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="235dp"
                            android:layout_width="210dp"
                            android:layout_height="70dp"
                            android:id="@+id/fullMap"
                            android:src="@drawable/ic_mapopen"/>
                    </RelativeLayout>
                    <!--지도 끝-->

                    </LinearLayout>
                </LinearLayout>
        </ScrollView>
    </LinearLayout>